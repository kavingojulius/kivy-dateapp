<Item>
    on_release: root.set_icon_gender(chek)

    CheckboxLeftWidget:
        id: chek
        group: "check"


<ItemConfirm>
    on_release: root.set_icon(check)

    CheckboxLeftWidget:
        id: check
        group: "check"

<HobbiesContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id: hobbies_input
        hint_text: "Hobbies"

    MDTextField:
        id: interests_input
        hint_text: "Interests"


<AgeSelectionPopup>
    title:'Select Select'
    
    size_hint:.8,None
    size:300,250
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Background color in RGBA (dark gray in this case)
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color : [255/255,255/255,255/255,1]
        padding:5
        MDLabel:
            id: slider_value_label
            text: str(int(age_slider.value))
            size_hint_y: None
            height: '20dp'
            color:'green'  # Red color
            font_size: '18sp'
            halign: 'center'
        MDSlider:
            id: age_slider
            min:1
            max:100
            hint_bg_color:'white'
            active:True
            color:'green' # slider selected active part
            bg_color: 1, 1, 1, 1  # White color
            knob_color: 1, 1, 1, 1  # Red color
            # track_color_inactive:"red"
            on_value: slider_value_label.text = str(int(self.value))  # Update label text
       
        MDBoxLayout:
            orientation:'horizontal'  
            spacing:6
            MDRectangleFlatButton:
                text:'Ok'                
                on_release:
                    root.print_selected_age()
                    root.dismiss()
            MDRectangleFlatButton:
                text:'Cancel'                
                on_release:root.dismiss()








