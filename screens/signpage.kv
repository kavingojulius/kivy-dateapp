<SignPage>:

    MDGridLayout:
        cols:1        
        spacing:10
        elevation:0.5
        padding:5
        #md_bg_color : [8/255,80/255,80/255,0.7]
        MDFloatingActionButton:
            id: button
            icon: "arrow-left"
            font_size:5
            type:"small"
            pos_hint:{"top":1}
            text_color:"green"
            md_bg_color : [8/255,80/255,80/255,0.2]
            elevation:0
            on_release: app.root.current = 'homepage'
        MDLabel :
            text : "REGISTRATION"            
            font_name:'fonts/HTOWERT.TTF'
            font_size : 30
            bold:True
            halign : "center"
            color:"green"
            size_hint_y : None
            pos_hint:{"top":1,"y":1}
            height : self.texture_size[1]
            # padding_y : 5
        MDScrollView:
            do_scroll_y: True
            MDList:

                MDBoxLayout :
                    orientation : 'vertical'
                    # size_hint : 1,None
                    # height:450
                    adaptive_height:True
                    # pos_hint:{"center_y":.5}            
                    elevation : 0
                    # md_bg_color : [8/255,80/255,80/255,0.1]
                    padding : 10
                    #spacing : 5
                    radius:[50,50,25,25]
                    MDTextField :
                        id:username
                        hint_text : "Username"
                        #mode : "fill"                
                        hint_text:'input username'                                
                        icon_right : "account"
                        # size_hint_x:None
                        # width : 300
                        adaptive_height:True
                        font_name:'fonts/HTOWERT.TTF'
                        font_size : '18sp'
                        pos_hint : {"center_x":.5}
                        normal_color : [239/255,243/255,245/255,1]
                        color_active : [1,1,1,1]
                    MDTextField :
                        id:password
                        hint_text : "Enter your Password"
                        password : True
                        # size_hint_x : None
                        # width : 300
                        adaptive_height:True
                        icon_right : "eye-off"            
                        font_size : '18sp'
                        pos_hint : {"center_x":.5}
                        normal_color : [239/255,243/255,245/255,1]
                        color_active : [1,1,1,1]
                    MDTextField :
                        id:cpassword
                        hint_text : "Confirm Password"
                        # size_hint_x : None
                        # width : 300
                        adaptive_height:True
                        password : True
                        icon_right : "eye-off"                
                        font_size : '18sp'
                        pos_hint : {"center_x":.5}
                        normal_color : [239/255,243/255,245/255,1]
                        color_active : [1,1,1,1]
                    MDTextField :
                        id:email
                        hint_text : "Email"
                        # size_hint_x : None
                        # width : 300
                        adaptive_height:True
                        icon_right : "email"                
                        font_size : '18sp'
                        pos_hint : {"center_x":.5}
                        normal_color : [35/255,49/255,48/255,1]
                        color_active : [1,1,1,1]
                    MDRectangleFlatButton :
                        text : "SIGN-IN"
                        font_size : 20
                        pos_hint : {"center_x":.5}
                        theme_text_color : "Custom"
                        on_release: root.data_show()                                                                    
                    MDRaisedButton:
                        text:'Login'                                        
                        pos_hint : {"center_x":.5}
                        elevation:0
                        on_release: app.root.current = 'loginpage'
                            # Widget:









